<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cartimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/cartitemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cartimage"
            android:layout_toRightOf="@+id/cartimage"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/cartremovebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cartimage"
            android:layout_alignEnd="@+id/cartitemname"
            android:layout_alignRight="@+id/cartitemname"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/red"
            android:text="Remove"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cartprice"
            android:layout_alignBottom="@+id/cartprice"
            android:layout_toEndOf="@+id/cartimage"
            android:layout_toRightOf="@+id/cartimage"
            android:paddingLeft="10dp"
            android:text="â‚¹"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/cartprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cartremovebtn"
            android:layout_toEndOf="@+id/textView12"
            android:layout_toRightOf="@+id/textView12"
            android:text="0000"
            android:textSize="30sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>